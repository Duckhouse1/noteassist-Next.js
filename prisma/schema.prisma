datasource db {
  provider = "sqlserver"
}

generator client {
  provider = "prisma-client-js"
}

// ==========================
// Organization / Tenancy
// ==========================

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members      Membership[]
  notes        Note[]
  integrations IntegrationConnection[]
}

// One user can belong to many orgs
// One org can have many users
model Membership {
  id             String   @id @default(cuid())
  organizationId String
  userId         String
  role           String   @default("member") // owner | admin | member
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([userId])
}

// ==========================
// Notes
// ==========================

model Note {
  id             String   @id @default(cuid())
  organizationId String
  userId         String

  title          String?
  content        String   @db.NVarChar(max)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([organizationId, createdAt])
  @@index([userId, createdAt])
}

// ==========================
// External Integrations
// ==========================
// Each user connects THEIR OWN Microsoft / DevOps account
// Scoped to an organization

model IntegrationConnection {
  id             String   @id @default(cuid())
  organizationId String
  userId         String

  provider       String   // "microsoft" | "azuredevops"
  displayName    String?

  accessToken    String?  @db.NVarChar(max)
  refreshToken   String?  @db.NVarChar(max)
  expiresAt      DateTime?
  scope          String?
  meta           String?  @db.NVarChar(max) // JSON string (tenantId, org, etc.)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId, provider])
  @@index([organizationId, provider])
  @@index([userId, provider])
}

// ==========================
// Users (NextAuth)
// ==========================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  passwordHash  String?   @db.NVarChar(max) // âœ… add
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]
  memberships   Membership[]
  notes         Note[]
  integrations  IntegrationConnection[]
}

// ==========================
// NextAuth Tables
// ==========================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token     String? @db.NVarChar(max)
  access_token      String? @db.NVarChar(max)
  id_token          String? @db.NVarChar(max)

  expires_at        Int?
  token_type        String?
  scope             String? @db.NVarChar(max)
  session_state     String?

  expires_in        Int?
  ext_expires_in    Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}



model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


